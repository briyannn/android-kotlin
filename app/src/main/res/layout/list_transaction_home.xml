<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingVertical="15dp"
    android:paddingHorizontal="15dp"
    android:background="@drawable/bacground_item_transaction_home"
    android:layout_marginBottom="15dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageTransaction"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundCornerOverlay"
        android:src="@drawable/ic_baseline_directions_bike_24"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginStart="14dp">

        <TextView
            android:id="@+id/textTransactionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samuel Sushi"
            style="@style/TextView.fifthSizeText"
            android:gravity="center"
            android:textColor="@color/mainTextColor"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/textTransactionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer"
            style="@style/TextView.sixthSizeText"
            android:gravity="center"
            android:textColor="@color/darkGrey"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textTransactionAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+Rp50.000"
        style="@style/TextView.fourthSizeText"
        android:layout_gravity="center"
        android:textColor="@color/greenColor"/>
</LinearLayout>