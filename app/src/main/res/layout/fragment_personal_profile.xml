<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    tools:context=".ui.layout.main.profile.PersonalProfileFragment">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_back_button"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginVertical="20dp"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="10dp"
            android:text="Personal Informations"
            style="@style/TextView.thirdSizeText"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <TextView
        android:id="@+id/personalDesc"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:paddingTop="40dp"
        android:layout_height="wrap_content"
        android:text="@string/personalProfileDesc"
        style="@style/personalDesc"/>

    <LinearLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/personalDesc"
        android:gravity="center"
        android:layout_marginTop="40dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bacground_item_transaction_home">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                style="@style/TextView.fourthSizeText"
                android:textColor="@color/mainTextColor"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="15dp"/>
            <TextView
                android:id="@+id/firstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="briyan Dwi Angga"
                style="@style/TextView.fourthSizeText"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="15dp"/>
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bacground_item_transaction_home">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                style="@style/TextView.fourthSizeText"
                android:textColor="@color/mainTextColor"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="15dp"/>
            <TextView
                android:id="@+id/lastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angga"
                style="@style/TextView.fourthSizeText"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="15dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/bacground_item_transaction_home"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/name">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verified Email"
                style="@style/TextView.fourthSizeText"
                android:gravity="center"
                android:textColor="@color/mainTextColor"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="briyannn98@gmail.com"
                style="@style/TextView.fourthSizeText"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:background="@drawable/bacground_item_transaction_home"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/email">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                style="@style/TextView.fourthSizeText"
                android:gravity="center"
                android:textColor="@color/mainTextColor"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+6282219441030"
                style="@style/TextView.fourthSizeText"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/managePhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage"
            style="@style/TextView.fourthSizeText"
            android:layout_gravity="center"
            android:textColor="@color/primaryColor"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>