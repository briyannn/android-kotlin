<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_back_button">

        <TextView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginVertical="20dp"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="10dp"
            android:text="Pin Confirmation"
            style="@style/TextView.thirdSizeText"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textPinTransferTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pinTransfer"
        style="@style/TextView.secondSizeText"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:gravity="center"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/pinTransferDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pinTransferDesc"
        style="@style/TextView.fifthSizeText"
        android:textColor="@color/textColorGrey"
        app:layout_constraintTop_toBottomOf="@id/textPinTransferTitle"
        android:gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/pinTransferDesc">

        <EditText
            android:id="@+id/pin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_otp_input"
            android:padding="20dp"
            android:layout_marginEnd="10dp"
            style="@style/TextView.firstSizeText"
            android:hint="_"
            android:textColorHint="@color/textColorBlack"
            android:textColor="@color/textColorBlack"
            android:inputType="text" />
        <EditText
            android:id="@+id/pin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_otp_input"
            android:padding="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            style="@style/TextView.firstSizeText"
            android:hint="_"
            android:textColorHint="@color/textColorBlack"
            android:textColor="@color/textColorBlack"
            android:inputType="text" />
        <EditText
            android:id="@+id/pin3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_otp_input"
            android:padding="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            style="@style/TextView.firstSizeText"
            android:hint="_"
            android:textColorHint="@color/textColorBlack"
            android:textColor="@color/textColorBlack"
            android:inputType="text" />
        <EditText
            android:id="@+id/pin4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_otp_input"
            android:padding="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            style="@style/TextView.firstSizeText"
            android:hint="_"
            android:textColorHint="@color/textColorBlack"
            android:textColor="@color/textColorBlack"
            android:inputType="text" />
        <EditText
            android:id="@+id/pin5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_otp_input"
            android:padding="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            style="@style/TextView.firstSizeText"
            android:hint="_"
            android:textColorHint="@color/textColorBlack"
            android:textColor="@color/textColorBlack"
            android:inputType="text" />
        <EditText
            android:id="@+id/pin6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_otp_input"
            android:padding="20dp"
            android:layout_marginStart="5dp"
            style="@style/TextView.firstSizeText"
            android:hint="_"
            android:textColorHint="@color/textColorBlack"
            android:textColor="@color/textColorBlack"
            android:inputType="text" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinue"
        style="@style/TextView.fourthSizeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/background_button_auth_active"
        android:paddingHorizontal="24dp"
        android:paddingVertical="15dp"
        android:text="Proceed Transaction"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>