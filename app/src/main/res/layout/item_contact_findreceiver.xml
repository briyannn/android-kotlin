<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/background_item_transaction_home"
    android:orientation="horizontal"
    android:gravity="center">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageContact"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundCornerOverlay"
        android:src="@drawable/ic_baseline_directions_bike_24"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="15dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samuel Sushi"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/contactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+62 812-3943-3494"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/darkGreyColor"/>
    </LinearLayout>
</LinearLayout>