<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextView">
        <item name="android:fontFamily">@font/nunito_font</item>
    </style>

    <style name="TextView.Bold">
        <item name="android:fontFamily">@font/nunito_font_bold</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:fontFamily">@font/nunito_font_medium</item>
    </style>

    <style name="TextView.SplashScreen">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/nunito_font_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.SplashScreen.Description">
        <item name="android:fontFamily">@font/nunito_font</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.MainActivity">
    </style>

    <style name="TextView.MainActivity.ViewAll">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="RoundCornerOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="EditText" />

    <style name="EditText.Input">
        <item name="android:fontFamily">@font/nunito_font</item>
        <item name="android:textColorHint">@color/darkGreyColor</item>
        <item name="android:textColor">@color/darkGreyColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="TextView.firstSizeText">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="TextView.secondSizeText">
        <item name="android:textSize">22dp</item>
    </style>

    <style name="TextView.thirdSizeText">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextView.fourthSizeText">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TextView.fifthSizeText">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="personalDesc">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#7A7886</item>
    </style>
</resources>